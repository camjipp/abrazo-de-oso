---
import BaseLayout from '../layouts/BaseLayout.astro';
const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout>
    <!-- Single Page with Background Image -->
    <section class="single-page">
        <div class="hero-image-bg">
            <img src={`${baseUrl}/images/AbrazoDeOsoNoText.png`} alt="Abrazo De Oso" />
        </div>
        
        <!-- Main Title Overlay -->
        <div class="title-overlay">
            <h1 class="main-title">Abrazo De Oso</h1>
            <p class="subtitle">Faith, Family, and Work</p>
        </div>
        
        <!-- Quote Box Overlay -->
        <div class="quote-box">
            <blockquote class="quote-text">
                "The problem with the world is that we draw the circle of our family too small. 
                We need to draw it larger every day."
            </blockquote>
            <div class="quote-author">â€” Mother Teresa</div>
            
            <div class="contact-info">
                <a href="mailto:abrazos@abrazosdeoso.com">abrazos@abrazosdeoso.com</a>
            </div>
        </div>
    </section>
</BaseLayout>

